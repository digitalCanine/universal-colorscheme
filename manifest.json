{
  "manifest_version": 2,
  "name": "digitalCanine's Universal Colorscheme",
  "version": "1.0.0",
  "description": "Apply your custom terminal colorscheme to websites. Works best with Dark Reader for full dark mode support.",
  "permissions": [
    "storage",
    "activeTab",
    "<all_urls>"
  ],
  "optional_permissions": [],
  "browser_specific_settings": {
    "gecko": {
      "id": "digitalcanines-universal-colorscheme@local.addon",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "48": "icon.png"
  },
  "developer": {
    "name": "Your Name",
    "url": "https://github.com/yourusername"
  }
}
